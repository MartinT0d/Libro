@model IEnumerable<Library.Models.Rental>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rentals</h2>

@Html.ActionLink("New Rental", "New", "Rentals", new { @class = "btn btn-primary" })

<table id="rentals" class="table table-striped table-hover " style="font-size:large">
    <thead>
        <tr>
            <th>Book</th>
            <th>Client</th>
            <th>Date Rented</th>
            <th>Date Returned</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rental in Model)
        {
            <tr>
                <td>@rental.Book.Title</td>
                <td>@rental.Client.Name</td>
                <td>@rental.DateRented</td>
                <td>@rental.DateReturned</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id = rental.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = rental.Id })
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts{
    <script>
      $(document).ready(function () {
          $("#rentals").DataTable();
      })
    </script>
}