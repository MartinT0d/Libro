@model IEnumerable<Library.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>

@Html.ActionLink("New Book", "New", "Books", new { @class = "btn btn-primary" })
<table id="books" class="table table-striped table-hover " style="font-size:large">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Author</th>
            <th>Available books</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td style="font-weight:bold">
  
                    @Html.ActionLink(book.Title, "Details", "Books", new {book.Id }, new { @class = "navbar-brand" })
                </td>
                <td>@book.Genre.Name</td>
                <td>@book.Author.Name</td>
                <td>@book.NumberInStock</td>
                <th>
                    @Html.ActionLink("Delete", "Delete", new { id = book.Id}) | 
                    @Html.ActionLink("Edit", "Edit", new { id = book.Id})
                </th>
            </tr>
        }
    </tbody>
</table>

@section scripts{
  <script>
      $(document).ready(function () {
          $("#books").DataTable();
      })
    </script>
    }